@model giflib.ViewModel.GifBaseViewModel
<div class="row text-center">
    <div class="col-md-12">
        @{
            if (!ViewData.ModelState.IsValid)
            {
                @Html.ValidationSummary("The following errors were found:", new { @class = "errorTempMessage" })
            }
            else if (Model.FileErrorMessage != null)
            {
                @Html.ValidationSummary(Model.FileErrorMessage, new { @class = "errorTempMessage" })
            }
            else if (!ViewData.ModelState.IsValid && Model.FileErrorMessage != null)
            {
                @Html.ValidationSummary(Model.FileErrorMessage + "The following errors were found:", new { @class = "errorTempMessage" })
            }

        }
    </div>
</div>